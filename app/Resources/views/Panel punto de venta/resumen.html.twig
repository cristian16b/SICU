{% block tabla %}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="alert alert-success" role="alert" align="center">
            <h4><b>Resumen de recargas</b></h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-md-4">
            <input class="form-control"
                                   type="text"
                                   align="center"
                                   id ="organismo"
                                   placeholder="Sede"
                                   />
    </div>
    <div class="col-lg-4 col-md-4">
            <input class="form-control"
                                   type="text"
                                   align="center"
                                   id ="fecha-inicio"
                                   placeholder="Fecha"
                                   />
            {#  
                el siguiente input es oculto y solo es para que se pueda reutilizar las funcionalidades de exportar
                a pdf, xls.
            #}
            <input class="form-control"
                                   type="hidden"
                                   align="center"
                                   id ="fecha-fin"
                                   placeholder="Fecha"
                                   />
    </div>
    <div class="col-lg-4 col-md-4">
            <input class="form-control"
                                   type="text"
                                   align="center"
                                   id ="hora"
                                   placeholder="Hora"
                                   />
    </div>
</div>
<div class="row" id="tablaMenusResumen">
    <div class="col-lg-12 col-md-12">
            <table id="tablaRecargas"
                class="table table-hover table-striped">
                <thead align="left">
                    <tr>
                        <th>Tipo</th>
                        <th>Cantidad</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody  id="tabla-resumen" align="left">
                </tbody>
            </table>
    </div>
</div>
{% endblock %}