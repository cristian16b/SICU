{% extends 'base.html.twig' %}
{% block body %}
<div id="modal-agregar-turno">
<div id="noScrollHorizontal">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <p>Seleccione fecha y sede a la que desea agregar turnos</p>
        </div>
    </div>
    <div class="row" >
        <div class="col-lg-6 col-md-6">
        {#  #}
            <select class="form-control"
                        required
                        id="sede-turno">
                <option value="agregar-turno-sede" disabled selected hidden>Sede</option>
            {% for sede in sedes %}
                <option>{{sede.nombreSede}}</option>
            {% endfor %}
            </select>
        </div>
        <div class="col-lg-6 col-md-6">
            <input class="form-control"
                           type="text"
                           align="center"
                           name="fecha-dia-mes-anio"
                           id ="agregar-turno-fecha"
                           required=""
                           placeholder="Seleccione la fecha"
                           />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <select class="form-control"
                        required
                        id="agregar-turno-horario-inicio">
                <option value="horario-inicio" disabled selected hidden>Hora inicio</option>
                <option>9</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <select class="form-control"
                        required
                        id="agregar-turno-horario-fin">
                <option disabled selected hidden>Hora fin</option>
                <option>10</option>
                <option>11</option>
                <option>12</option>
                <option>13</option>
                <option>14</option>
                <option>15</option>
                <option>16</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <input class="form-control"
                           type="text"
                           id ="agregar-turno-cupo"
                           required=""
                           placeholder="Cupo por horario"
                           />
        </div>
    </div>
</div>
</div>
{% endblock %}