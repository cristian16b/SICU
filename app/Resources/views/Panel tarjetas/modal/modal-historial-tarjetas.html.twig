{% extends 'base.html.twig' %}
{% block body %}
<div id="modal-historial-tarjetas">
<div id="noScrollHorizontal">
    <div class="row">
        <div class="col-lg-2 col-md-2">
            <p>Comensal:</p>
        </div>
        <div class="col-lg-5 col-md-5">
            <input id="input-nombre-comensal-tarjeta"
                   class="form-control"
                   readonly
            />
        </div>
        <div class="col-lg-2 col-md-2">
            <p>Saldo:</p>
        </div>
        <div class="col-lg-3 col-md-3">
            <input id="input-saldo-tarjeta"
                   class="form-control"
                   readonly
            />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 col-md-2">
            <p>Tipo historial:</p>
        </div>
        <div class="col-lg-5 col-md-5">
            <select class="form-control"
                            required
                            id="tipo-historial">
                    <option disabled selected hidden>Opción</option>
                    <option>Consumos</option>
                    <option>Recargas</option>
            </select>
        </div>
        <div class="col-lg-2 col-md-2">
            <p>Año:</p>
        </div>
        <div class="col-lg-3 col-md-3">
            <select class="form-control"
                            required
                            id="anio">
                    <option disabled selected hidden>Opción</option>
                    {# provisorio, generar funcionalidad #}
                    <option>2018</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <table id="tablaHistorial"
                class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Sede</th>
                        <th>Concepto</th>
                        <th>Monto</th>
                        <th>Saldo</th>
                    </tr>
                </thead>
                <tbody  id="tabla-tarjetas" align="center">
                </tbody>
            </table>
        </div>
    </div>
{#
uso este input oculto para guardar el id de la tarjeta
#}
    <input class="form-control"
                      type="hidden"
                      disabled
                      id ="id-tarjeta"
                      />
</div>
</div>    
{% endblock%}