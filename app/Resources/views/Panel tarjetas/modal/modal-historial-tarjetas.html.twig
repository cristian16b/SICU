{% extends 'base.html.twig' %}
{% block body %}
<div id="modal-historial-tarjetas">
<div id="noScrollHorizontal">
    <div class="row">
        <div class="col-lg-2 col-md-2">
            <p>Comensal:</p>
        </div>
        <div class="col-lg-5 col-md-5">
            <input id="input-nombre-comensal-tarjeta"
                   class="form-control"
                   readonly
            />
        </div>
        <div class="col-lg-2 col-md-2">
            <p>Saldo:</p>
        </div>
        <div class="col-lg-3 col-md-3">
            <input id="input-saldo-tarjeta"
                   class="form-control"
                   readonly
            />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 col-md-2">
            <p>Tipo historial:</p>
        </div>
        <div class="col-lg-5 col-md-5">
        </div>
        <div class="col-lg-2 col-md-2">
            <p>Periodo:</p>
        </div>
        <div class="col-lg-3 col-md-3">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <table id="tablaHistorial"
                class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Sede</th>
                        <th>Concepto</th>
                        <th>Monto</th>
                        <th>Saldo</th>
                    </tr>
                </thead>
                <tbody  id="tabla-tarjetas" align="center">
                </tbody>
            </table>
        </div>
    </div>
</div>
</div>    
{% endblock%}