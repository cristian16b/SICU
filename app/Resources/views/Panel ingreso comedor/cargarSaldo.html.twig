{% block cargarSaldo %}
<div class="row">
    <div class="col-lg-12 col-md-12">
        <p></p>
        <div class="alert alert-warning" role="alert" align="center">
            <h4><b>Carga de saldo</b></h4>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Apellido</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               id ="apellido"
               readonly
               />
    </div>
</div>    
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Nombre</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               id ="nombre"
               readonly
               />
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Nro tarjeta</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               value=""
               id ="tarjeta-id"
               readonly
               />
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Saldo</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               value="0.00"
               id ="saldo"
               readonly
               />
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Monto para acreditar</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               id ="monto"
               placeholder="Ingrese el monto"
               />
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-md-6">
        <p><b>Saldo actualizado</b></p>
    </div>
    <div class="col-lg-6 col-md-6">
        <input class="form-control"
               type="text"
               align="center"
               id ="saldo-actualizado"
               placeholder="Nuevo saldo"
               />
    </div>
</div>
{% endblock%}    
   